		<meta name="google-site-verification" content="" />
		<meta name="geo.region" content="MX-PUE" />
		<meta name="geo.placename" content="Puebla, México" />
		<meta name="ICBM" content="19.0414, -98.2063" />
		<meta name="DC.title" content="SYNC - Desarrollo Web para PyMEs en Puebla y México" />
		<link rel="canonical" href="https://syncestudio.com" />
		
		<!-- Google Search Console and performance -->
		<meta name="theme-color" content="#1e40af" />
		<meta name="application-name" content="SYNC" />
		<meta name="msapplication-TileColor" content="#1e40af" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		
		<!-- Open Graph meta tags for social sharing -->
		<meta property="og:title" content="SYNC - Desarrollo Web para PyMEs en Puebla y México" />
		<meta property="og:description" content="Agencia de desarrollo web especializada en sitios modernos para PyMEs. Presencia digital profesional en Puebla y México. ¡Contacta SYNC hoy!" />
		<meta property="og:type" content="website" />
		<meta property="og:image" content="/web_development_service.webp" />
		<meta property="og:locale" content="es_MX" />
		<meta property="og:site_name" content="SYNC - Desarrollo Web" />
