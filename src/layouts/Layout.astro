		<meta property="article:author" content="SYNC Estudio" />
		<meta property="article:publisher" content="https://syncestudio.com" />
		
		<!-- Twitter Card meta tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="SYNC - Desarrollo Web para PyMEs en Puebla y México" />
		<meta name="twitter:description" content="Agencia de desarrollo web especializada en sitios modernos para PyMEs en Puebla y México." />
		<meta name="twitter:image" content="/web_development_service.webp" />
		<meta name="twitter:site" content="@syncestudio" />
		<meta name="twitter:creator" content="@syncestudio" />
		
		<!-- Additional SEO meta tags -->
		<meta name="language" content="Spanish" />
		<meta name="distribution" content="global" />
		<meta name="rating" content="general" />
		<meta name="revisit-after" content="7 days" />
		<meta name="expires" content="never" />
		<meta name="coverage" content="Worldwide" />
		<meta name="target" content="all" />
		<meta name="HandheldFriendly" content="True" />
		<meta name="format-detection" content="telephone=yes" />
		<meta name="format-detection" content="address=yes" />
		
		<!-- Schema.org structured data for local business -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "LocalBusiness",
			"@id": "https://syncestudio.com/#organization",
			"name": "SYNC - Desarrollo Web",
			"alternateName": "SYNC Estudio",
			"description": "Agencia de desarrollo web especializada en sitios modernos para PyMEs en Puebla y México",
			"url": "https://syncestudio.com",
			"telephone": "+52-222-823-0805",
			"email": "syncestudiomx@gmail.com",
			"foundingDate": "2020",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Puebla",
				"addressRegion": "Puebla",
				"addressCountry": "MX",
				"postalCode": "72000"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": "19.0414",
				"longitude": "-98.2063"
			},
			"areaServed": [
				{
					"@type": "State",
					"name": "Puebla"
				},
				{
					"@type": "Country",
					"name": "México"
				}
			],
			"serviceType": [
				"Desarrollo Web",
				"Diseño Web",
				"Desarrollo de Aplicaciones Móviles",
				"Soluciones Digitales para PyMEs"
			],
			"priceRange": "$$",
			"aggregateRating": {
				"@type": "AggregateRating",
				"ratingValue": "4.8",
				"reviewCount": "15"
			},
			"openingHours": "Mo-Fr 09:00-18:00",
			"image": "https://syncestudio.com/web_development_service.webp",
			"logo": "https://syncestudio.com/logo_text.png",
			"sameAs": [
				"https://wa.me/2228230805"
			]
		}
		</script>

		<!-- Website Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"@id": "https://syncestudio.com/#website",
			"url": "https://syncestudio.com",
			"name": "SYNC - Desarrollo Web para PyMEs",
			"description": "Creamos sitios web profesionales para negocios como el tuyo",
			"publisher": {
				"@id": "https://syncestudio.com/#organization"
			},
			"potentialAction": {
				"@type": "SearchAction",
				"target": "https://syncestudio.com/search?q={search_term_string}",
				"query-input": "required name=search_term_string"
			}
		}
		</script>

		<!-- Service Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Service",
			"name": "Desarrollo Web para PyMEs",
			"description": "Creamos sitios web profesionales para pequeñas y medianas empresas en Puebla y México",
			"provider": {
				"@id": "https://syncestudio.com/#organization"
			},
			"areaServed": {
				"@type": "Country",
				"name": "México"
			},
			"hasOfferCatalog": {
				"@type": "OfferCatalog",
				"name": "Servicios de Desarrollo Web",
				"itemListElement": [
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Desarrollo Web para PyMEs",
							"description": "Sitios web modernos y responsivos para pequeñas empresas"
						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Aplicaciones Móviles Empresariales",
							"description": "Apps móviles para iOS y Android diseñadas para empresas"
						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Soluciones Digitales Personalizadas",
							"description": "Software a medida para optimizar procesos empresariales"
						}
					}
				]
			}
		}
		</script>
		
		<slot name="head" />
	</head>
	<body>
		<Header />

		<slot />

		<Footer />
	</body>
</html>