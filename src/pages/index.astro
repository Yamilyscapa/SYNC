---
import Layout from "../layouts/Layout.astro";
import ServiceCard from "../components/ServiceCard.astro";
---

<Layout>
	<section class="hero container">
		<div class="hero_content">
			<h1>Hazte visible donde importa.</h1>
			<p>
				Hacemos realidad tu presencia digital con sitios web, apps y
				automatización.
			</p>
			<div class="hero_buttons">
				<a href="/contact" class="button primary">¿Empezamos hoy?</a>
				<a href="/projects" class="button secondary">Ver más</a>
			</div>
		</div>
	</section>

	<section class="services section">
		<h2 class="title">Nuestros servicios</h2>

		<div class="services_container">
			<ServiceCard
				id="service1"
				title="Diseño y desarrollo web"
				description="Ofrecemos soluciones de diseño y desarrollo web personalizadas para pequeñas y medianas empresas en México, ayudándolas a fortalecer su presencia digital y alcanzar sus objetivos comerciales."
				icon="Web"
			/>
			<ServiceCard
				id="service2"
				title="Desarrollo de apps"
				description="Desarrollamos aplicaciones móviles y web a la medida para pequeñas y medianas empresas en México, optimizando sus procesos y facilitando una conexión más directa y eficiente con sus clientes."
				icon="Phone"
			/>
			<ServiceCard
				id="service3"
				title="Soluciones a medida"
				description="Creamos soluciones a la medida que automatizan tareas como la gestión de citas y el seguimiento de clientes, ayudándote a operar con mayor eficiencia."
				icon="Desktop"
			/>
		</div>
	</section>
</Layout>

<style lang="scss">
	.title {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 3rem;
	}

	.hero {
		width: 100vw;
		height: calc(100vh - 4rem);
		background-image: url("../assets/background.webp");
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
		display: flex;
		align-items: center;

		.hero_content {
			display: flex;
			flex-direction: column;
			gap: 1rem;

			h1 {
				font-size: 4rem;
				text-transform: uppercase;
			}

			p {
				width: 80%;
				opacity: 60%;
				font-size: 1.5rem;
			}

			.hero_buttons {
				margin-top: 2rem;
				display: flex;
				gap: 1rem;
			}

			@media screen and (max-width: 1200px) {
				h1 {
					font-size: 3rem;
				}

				p {
					width: 100%;
					font-size: 1.2rem;
				}
			}
		}
	}

	.services {
		&_container {
			display: flex;
			flex-direction: row;
			align-items: stretch;
			flex-wrap: wrap;
			justify-content: center;
			gap: 1rem;
			row-gap: 1.5rem;
		}
	}
</style>
